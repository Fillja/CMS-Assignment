@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var centerContentClass = Model!.Content.Value<bool>("centerContent") ? "center-content" : "";

    var containerBackgroundImage = Model?.Content.Value<IPublishedContent>("containerBackgroundImage")?.Url() ?? null;
}

<div class="container @centerContentClass">

    @if (!string.IsNullOrEmpty(containerBackgroundImage))
    {
        <img class="background-image" src="@containerBackgroundImage" alt="background-image">
    }

    @await Html.GetBlockGridItemAreasHtmlAsync(Model)
</div>