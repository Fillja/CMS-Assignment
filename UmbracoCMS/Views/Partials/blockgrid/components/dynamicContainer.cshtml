@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var centerContentClass = Model!.Content.Value<bool>("centerContent") ? "center-content" : "";
    var startContentClass = Model!.Content.Value<bool>("contentAtStartDesktop") ? "start-content" : "";
    var spacingLeft = Model!.Content.Value<bool>("spacingLeft") ? "spacing-left" : "";
    var spacingRight = Model!.Content.Value<bool>("spacingRight") ? "spacing-right" : "";   
}

<div class="dynamic-container @centerContentClass @startContentClass @spacingLeft @spacingRight">
    @await Html.GetBlockGridItemAreasHtmlAsync(Model)
</div>

