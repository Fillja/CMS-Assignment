@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using Umbraco.Cms.Web.Common.PublishedModels;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var selectedImg = Model?.Content?.Value<IPublishedContent>("selectedImg")?.Url() ?? null;
    var imgDescription = Model?.Content.Value<string>("imgDescription") ?? "";

    var hideWhenPhone = Model?.Content.Value<bool>("hideWhenPhone");
    var hideClass = (hideWhenPhone == true) ? "desktop-image" : "";

    var autoScaling = Model?.Content.Value<bool>("autoScaling");
    var scaleableClass = (autoScaling == true) ? "scaleable-image" : "";
}

@if (!string.IsNullOrEmpty(selectedImg))
{
    <img class="@hideClass @scaleableClass" src="@selectedImg" alt="@imgDescription">
}