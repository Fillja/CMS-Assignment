@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper

@{
    var rootContents = UmbracoHelper.ContentAtRoot();
    var settings = rootContents.FirstOrDefault(x => x.ContentType.Alias == "settingsPage") ?? null;
    var officeLocation = settings?.Value<string>("officeLocation") ?? "";
}

<div class="header-banner bg-primary">
    <div class="container">
        <p class="banner-address">@officeLocation</p>
        <div class="banner-socials">
            <div class="horizontal-divider"></div>
            <a href="#" class="social-button"><i class="fa-brands fa-facebook-f"></i></a>
            <div class="horizontal-divider"></div>
            <a href="#" class="social-button"><i class="fa-brands fa-twitter"></i></a>
            <div class="horizontal-divider"></div>
            <a href="#" class="social-button"><i class="fa-brands fa-linkedin-in"></i></a>
            <div class="horizontal-divider"></div>
        </div>
    </div>
</div>